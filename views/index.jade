doctype html
html
  head
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.message-body
      div.subject Re: #{subject} 
      div.metadata 
        span.left-justify #[strong #{sender}]
        span.right-justify 9:15 AM (#{hours} hours ago)
        br
        | to You 
      div.message
        pre
          | #{salutation}
          br
          br
          | #{body}
          br
          br
          | #{closing}
    div.response-body
      div.reply-body
        div.recipient To: #{sender} 
          br
          br
          textarea
          br
          button.send Send